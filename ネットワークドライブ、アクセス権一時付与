@echo off
set SHARE=\\SERVER\SharedFolder
set USER=your_username
set PASSWORD=your_password

rem ネットワークドライブの一時接続（Zドライブとしてマウントする例）
net use Z: %SHARE% /user:%USER% %PASSWORD%
か
net use %SHARE% /user:%USER% %PASSWORD%


rem フォルダの中を確認（接続確認用）
dir Z:\

rem 処理が終わったら切断（任意）
net use Z: /delete /y





@echo off
set SHARE=\\172.28.57.124
set USER=your_username
set PASSWORD=your_password

rem マスターフォルダ接続
net use %SHARE% /delete /y
net use %SHARE% /user:%USER% %PASSWORD%


rem マスターフォルダ切断
net use %SHARE% /delete /y


@echo off
setlocal

:: 接続情報の設定
set SHARE=\\172.28.57.124
set USER=your_username
set PASSWORD=your_password

echo === ネットワーク共有への接続を試みています ===
net use %SHARE% /delete /y >nul 2>&1
net use %SHARE% /user:%USER% %PASSWORD% >nul 2>&1

if errorlevel 1 (
    echo 接続に失敗しました。ユーザー名またはパスワードが正しくない可能性があります。
    goto :END
) else (
    echo 接続に成功しました。
)

:: --- ここに共有フォルダへの処理を書く ---
:: 例: ファイル一覧表示
dir %SHARE%


:: 処理後に切断
echo === 接続を切断しています ===
net use %SHARE% /delete /y >nul 2>&1